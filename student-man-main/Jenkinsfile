pipeline {
    agent any

    environment {
        REGISTRY = "farzzit"
        IMAGE = "studentmang-app"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'master', url: 'https://github.com/medaminehammami/student-management-devops.git'
            }
        }

        stage('Build with Maven') {
            steps {
                dir('student-man-main') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Dependency Check') {
            steps {
                dir('student-man-main') {
                    sh '''
                    echo "üîç Running OWASP Dependency-Check (light scan)..."
                    mvn org.owasp:dependency-check-maven:check \
                        -Dformat=HTML \
                        -DfailBuildOnCVSS=7 \
                        -DskipAssembly=true
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'student-man-main/target/dependency-check-report.html', allowEmptyArchive: true
                }
            }
        }

        stage('Run SonarQube Analysis') {
            environment {
                SONARQUBE = credentials('sonarqube-token')
            }
            steps {
                dir('student-man-main') {
                    withSonarQubeEnv('SonarQube') {
                        sh '''
                            mvn sonar:sonar \
                              -Dsonar.projectKey=studentmang-app \
                              -Dsonar.host.url=http://192.168.49.2:32000 \
                              -Dsonar.login=$SONARQUBE
                        '''
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('student-man-main') {
                    sh 'docker build -t $REGISTRY/$IMAGE:latest .'
                }
            }
        }

        stage('Trivy Scan (Security)') {
            steps {
                dir('student-man-main') {
                    sh '''
                    echo "üõ†Ô∏è  Pre-downloading Trivy vulnerability database..."
                    trivy --config /dev/null image --download-db-only || true

                    echo "üîç Scanning Docker image for HIGH and CRITICAL vulnerabilities..."
                    trivy image --ignore-unfixed --scanners vuln --light --timeout 25m \
                        --exit-code 0 --severity HIGH,CRITICAL \
                        --format html -o trivy-report.html $REGISTRY/$IMAGE:latest
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'student-man-main/trivy-report.html', allowEmptyArchive: true
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                dir('student-man-main') {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh '''
                            echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                            docker push $REGISTRY/$IMAGE:latest
                            docker logout
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'üìä Generating summary report...'
            sh '''
            echo "<html><head><title>DevSecOps Report</title></head><body>
            <h1>DevSecOps Security Pipeline Summary</h1>
            <ul>
                <li><a href='student-man-main/target/dependency-check-report.html'>Dependency Check Report</a></li>
                <li><a href='student-man-main/trivy-report.html'>Trivy Image Scan Report</a></li>
                <li><a href='http://192.168.49.2:32000/dashboard?id=studentmang-app'>SonarQube Dashboard</a></li>
            </ul>
            <p>Generated automatically by Jenkins at $(date)</p>
            </body></html>" > summary-report.html
            '''
            archiveArtifacts artifacts: 'summary-report.html', allowEmptyArchive: true
        }
        success {
            echo '‚úÖ All security reports generated and archived successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed. Check logs for more details.'
        }
    }
}
