pipeline {
    agent any

    options {
        disableConcurrentBuilds()
        timestamps()
    }

    environment {
        REGISTRY = "ghaith6789"
        IMAGE = "student_app_management"

        SONAR_HOST_URL = "http://192.168.33.10:9000"
        APP_DAST_URL   = "http://192.168.49.2:32639"

        GITLEAKS_REPORT = "gitleaks-report.json"

        // âž• ADDED (FIX Trivy /tmp read-only)
        TRIVY_CACHE_DIR = "${WORKSPACE}/.trivycache"
        TRIVY_TMP_DIR   = "${WORKSPACE}/.trivytmp"
    }

    stages {

        stage('Clean Workspace') {
            steps { cleanWs() }
        }

        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/ghaithelbenna/students-management-devops.git'
            }
        }

        // âœ… 1) Tests obligatoires (prod)
        stage('Unit Tests') {
            steps {
                dir('student-man-main') {
                    sh 'mvn -B clean test'
                }
            }
            post {
                always {
                    junit testResults: 'student-man-main/target/surefire-reports/*.xml',
                          allowEmptyResults: false
                }
            }
        }

        // âœ… 2) Build Jar
        stage('Build with Maven') {
            steps {
                dir('student-man-main') {
                    sh 'mvn -B clean package -DskipTests'
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'student-man-main/target/*.jar',
                                     allowEmptyArchive: false
                }
            }
        }

        // âœ… 3) Secrets scan prod (FAIL si leaks)
        stage('Secrets Scan (Gitleaks)') {
            steps {
                dir('student-man-main') {
                    sh '''
                    echo "ðŸ”’ Running Gitleaks Secrets Scan..."
                    gitleaks detect --source . \
                      --redact \
                      --report-format json \
                      --report-path "$GITLEAKS_REPORT"
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: "student-man-main/${GITLEAKS_REPORT}",
                                     allowEmptyArchive: false
                }
            }
        }

        // âœ… 4) SCA prod : FAIL si CVSS >= 7
        stage('Dependency Check (SCA)') {
            steps {
                dir('student-man-main') {
                    sh '''
                    echo "ðŸ” Running OWASP Dependency-Check..."
                    mvn -B org.owasp:dependency-check-maven:check \
                        -Dformat=HTML \
                        -DfailBuildOnCVSS=7
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'student-man-main/target/dependency-check-report.html',
                                     allowEmptyArchive: false
                }
            }
        }

        // âœ… 5) SAST Sonar prod + webhook
        stage('SonarQube (SAST)') {
            environment {
                SONAR_TOKEN = credentials('sonarqube-token')
            }
            steps {
                dir('student-man-main') {
                    withSonarQubeEnv('SonarQube') {
                        // ðŸ”§ FIX: utiliser sonar.login (plus compatible que sonar.token)
                        sh """
                        echo "ðŸ“Š Running SonarQube static code analysis..."
                        mvn -B sonar:sonar \
                          -Dsonar.projectKey=studentmang-app \
                          -Dsonar.host.url=${SONAR_HOST_URL} \
                          -Dsonar.login=$SONAR_TOKEN
                        """
                    }
                }
            }
        }

        // âœ… 5bis) Quality Gate (Production ready)
        stage('Quality Gate') {
            steps {
                script {
                    // ðŸ”§ FIX: timeout + arrÃªt clair si gate KO
                    timeout(time: 10, unit: 'MINUTES') {
                        def qg = waitForQualityGate()
                        echo "âœ… Quality Gate status: ${qg.status}"

                        if (qg.status != 'OK') {
                            error "âŒ Pipeline stopped: Quality Gate = ${qg.status}"
                        }
                    }
                }
            }
        }

        // âœ… 6) Build Docker avec tag unique
        stage('Build Docker Image') {
            steps {
                dir('student-man-main') {
                    script {
                        def dockerImage = "${env.REGISTRY}/${env.IMAGE}:${env.BUILD_NUMBER}"
                        sh "docker build -t ${dockerImage} ."
                        sh "docker tag ${dockerImage} ${env.REGISTRY}/${env.IMAGE}:latest"
                    }
                }
            }
        }

        // âœ… 7) Trivy prod : FAIL si HIGH/CRITICAL
        stage('Trivy Scan (Container Security)') {
            steps {
                dir('student-man-main') {
                    script {
                        def dockerImage = "${env.REGISTRY}/${env.IMAGE}:${env.BUILD_NUMBER}"

                        // ðŸ”§ FIX: Ã©viter /tmp en lecture seule
                        sh """
                          echo "ðŸ“Œ Prepare Trivy writable dirs..."
                          mkdir -p ${TRIVY_CACHE_DIR} ${TRIVY_TMP_DIR}

                          export TMPDIR=${TRIVY_TMP_DIR}

                          trivy image --scanners vuln \
                            --cache-dir ${TRIVY_CACHE_DIR} \
                            --severity HIGH,CRITICAL \
                            --exit-code 1 \
                            --timeout 15m \
                            --format table \
                            --output trivy-report.html \
                            ${dockerImage}
                        """
                    }
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'student-man-main/trivy-report.html',
                                     allowEmptyArchive: false
                }
            }
        }

        // âœ… 8) DÃ©ploiement temporaire pour DAST
        stage('Deploy App for DAST') {
            steps {
                script {
                    def dockerImage  = "${env.REGISTRY}/${env.IMAGE}:${env.BUILD_NUMBER}"
                    def appContainer = "app-test-${env.BUILD_NUMBER}"

                    sh """
                      docker rm -f ${appContainer} || true
                      docker run -d --name ${appContainer} -p 8080:8080 ${dockerImage}

                      echo "Waiting for app..."
                      timeout 120 bash -c 'until curl -f http://localhost:8080/ >/dev/null 2>&1; do sleep 5; done'
                    """
                }
            }
        }

        // âœ… 9) DAST Nikto
        stage('Nikto Scan (DAST)') {
            steps {
                dir('student-man-main') {
                    sh '''
                    echo "ðŸ’¥ Running Nikto on local deployed app..."
                    nikto -h http://localhost:8080 \
                      -maxtime 120 \
                      -Format html \
                      -o nikto-report.html
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'student-man-main/nikto-report.html',
                                     allowEmptyArchive: false
                }
            }
        }

        // âœ… 10) Push seulement si tout SUCCESS
        stage('Push to Docker Hub') {
            when { expression { currentBuild.currentResult == 'SUCCESS' } }
            steps {
                dir('student-man-main') {
                    script {
                        def dockerImage = "${env.REGISTRY}/${env.IMAGE}:${env.BUILD_NUMBER}"
                        withCredentials([usernamePassword(
                            credentialsId: 'dockerhub',
                            usernameVariable: 'DOCKER_USER',
                            passwordVariable: 'DOCKER_PASS'
                        )]) {
                            sh """
                              echo "\$DOCKER_PASS" | docker login -u "\$DOCKER_USER" --password-stdin
                              docker push ${dockerImage}
                              docker push ${env.REGISTRY}/${env.IMAGE}:latest
                              docker logout
                            """
                        }
                    }
                }
            }
        }

        stage('Generate Summary Report') {
            steps {
                script {
                    def time = sh(script: "date", returnStdout: true).trim()
                    writeFile file: 'student-man-main/summary-report.html', text: """
                    <html><head><title>DevSecOps Report</title></head><body>
                        <h2>âœ… DevSecOps Security Pipeline Summary</h2>
                        <ul>
                            <li><a href='target/dependency-check-report.html'>Dependency Check Report (SCA)</a></li>
                            <li><a href='trivy-report.html'>Trivy Image Scan Report (Container)</a></li>
                            <li><a href='nikto-report.html'>Nikto Server Scan Report (DAST)</a></li>
                            <li><a href='${GITLEAKS_REPORT}'>Gitleaks Secrets Scan Report</a></li>
                            <li><a href='${SONAR_HOST_URL}/dashboard?id=studentmang-app'>SonarQube Dashboard (SAST)</a></li>
                        </ul>
                        <p>Generated by Jenkins on ${time}</p>
                    </body></html>
                    """
                }
                archiveArtifacts artifacts: 'student-man-main/summary-report.html',
                                 allowEmptyArchive: false
            }
        }
    }

    post {
        always {
            echo 'ðŸŽ¯ Pipeline finished.'

            // cleanup conteneur de test
            script {
                def appContainer = "app-test-${env.BUILD_NUMBER}"
                sh "docker rm -f ${appContainer} || true"
            }

            emailext(
                subject: "Pipeline Status: ${currentBuild.currentResult} - ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """<html><body>
                    <h3>DevSecOps Pipeline Result</h3>
                    <p><b>Status:</b> ${currentBuild.currentResult}</p>
                    <p><b>Job:</b> ${env.JOB_NAME}</p>
                    <p><b>Build Number:</b> ${env.BUILD_NUMBER}</p>
                    <p><b>Build URL:</b> <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                </body></html>""",
                to: "ghaithelbenna2@gmail.com",
                mimeType: "text/html",
                attachmentsPattern: """student-man-main/target/dependency-check-report.html,
student-man-main/trivy-report.html,
student-man-main/nikto-report.html,
student-man-main/${GITLEAKS_REPORT},
student-man-main/summary-report.html"""
            )
        }
    }
    
}
