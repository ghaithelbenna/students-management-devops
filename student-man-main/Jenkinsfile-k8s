pipeline {
    agent any

    environment {
        K8S_PATH = "k8s"
        REPORT_DIR = "reports"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/medaminehammami/student-management-devops.git'
            }
        }

        stage('KubeLinter Scan') {
            steps {
                echo "üîç Running KubeLinter scan..."
                sh '''
                    mkdir -p ${REPORT_DIR}/kubelinter
                    kube-linter lint ${K8S_PATH} --format html > ${REPORT_DIR}/kubelinter/index.html || true
                '''
            }
        }

        stage('Kubescape Scan') {
            steps {
                echo "üõ°Ô∏è Running Kubescape scan..."
                sh '''
                    mkdir -p ${REPORT_DIR}/kubescape
                    kubescape scan framework nsa --format html --output ${REPORT_DIR}/kubescape/index.html || true
                '''
            }
        }

        stage('Publish Reports') {
            steps {
                publishHTML(target: [
                    allowMissing: true,
                    keepAll: true,
                    alwaysLinkToLastBuild: true,
                    reportDir: "${REPORT_DIR}/kubelinter",
                    reportFiles: 'index.html',
                    reportName: 'KubeLinter Report'
                ])
                publishHTML(target: [
                    allowMissing: true,
                    keepAll: true,
                    alwaysLinkToLastBuild: true,
                    reportDir: "${REPORT_DIR}/kubescape",
                    reportFiles: 'index.html',
                    reportName: 'Kubescape Report'
                ])
            }
        }
    }

    post {
        always {
            echo "‚úÖ Security scans completed. Reports archived."
            archiveArtifacts artifacts: "${REPORT_DIR}/**", allowEmptyArchive: true
        }
    }
}
